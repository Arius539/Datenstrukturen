<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fpj.javafxController.ChatWindowController"
            prefWidth="800"
            prefHeight="600"
            styleClass="root"
            stylesheets="@/styles/chatWindowStyles.css">
    <top>
        <HBox spacing="12" styleClass="chat-header">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Label fx:id="lblContact"
                   text="Benutzername"
                   styleClass="chat-username"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <Button text="â†»"
                    onAction="#onReloadChat">
                <tooltip>
                    <Tooltip text="Chatverlauf neu laden"/>
                </tooltip>
            </Button>

            <Button fx:id="btnExport"
                    text="ðŸ“‚"
                    onAction="#exportChat">
                <tooltip>
                    <Tooltip text="Chatverlauf exportieren als CSV"/>
                </tooltip>
            </Button>
        </HBox>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    styleClass="chat-scroll">
            <content>
                <VBox fx:id="vbMessages"
                      spacing="8"
                      fillWidth="true"
                      styleClass="chat-container"/>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <VBox styleClass="chat-input-wrapper">
            <padding>
                <Insets top="8" right="12" bottom="12" left="12"/>
            </padding>

            <Separator/>

            <HBox spacing="8" styleClass="chat-input-row">
                <TextArea fx:id="taInput"
                          HBox.hgrow="ALWAYS"
                          promptText="Nachricht eingebenâ€¦"
                          prefRowCount="2"
                          wrapText="true"
                          styleClass="chat-input-area"/>

                <Button fx:id="btnSend"
                        text="Senden"
                        defaultButton="true"
                        onAction="#send"
                        styleClass="button primary chat-send-button"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
