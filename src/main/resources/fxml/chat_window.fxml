<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fpj.javafxController.ChatWindowController">

    <top>
        <HBox spacing="12">
            <padding><Insets topRightBottomLeft="12"/></padding>
            <Label text="Chat mit:" styleClass="card-title"/>
            <Label fx:id="lblContact"/>
        </HBox>
    </top>

    <center>
        <ListView fx:id="lvMessages"/>
    </center>

    <bottom>
        <HBox spacing="8">
            <padding><Insets topRightBottomLeft="12"/></padding>
            <TextField fx:id="tfInput" HBox.hgrow="ALWAYS" promptText="Nachricht eingebenâ€¦"/>
            <Button text="Senden" onAction="#send"/>
        </HBox>
    </bottom>
</BorderPane>
