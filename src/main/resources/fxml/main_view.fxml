<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.fpj.javafxController.MainViewController"
          hgap="12" vgap="12" stylesheets="@../styles/mainViewStyles.css">

    <padding>
        <Insets topRightBottomLeft="12"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <VBox GridPane.columnIndex="0" spacing="12">

        <StackPane styleClass="card">
            <VBox spacing="6">
                <Label text="Profil" styleClass="card-title"/>
                <Label fx:id="lblEmail"/>
            </VBox>
        </StackPane>

        <StackPane styleClass="card">
            <VBox spacing="6">
                <Label text="Kontostand" styleClass="card-title"/>
                <Label fx:id="lblBalance" styleClass="balance"/>
            </VBox>
        </StackPane>

        <StackPane styleClass="card" VBox.vgrow="ALWAYS">
            <VBox spacing="8">
                <Label text="Aktionen" styleClass="card-title"/>
                <Button text="Transaktionsübersicht"    onAction="#actionTransactions"/>
                <Button text="Meine Pinnwand"  onAction="#actionWallComments"/>
                <Button text="Direktnachrichten" onAction="#actionDirectMessages"/>
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </StackPane>
    </VBox>

    <!-- ===== Spalte 2: zentraler Bereich ===== -->
    <VBox GridPane.columnIndex="1" spacing="12">

        <StackPane styleClass="card">
            <VBox spacing="10">

                <fx:define>
                    <ToggleGroup fx:id="txTypeGroup"/>
                </fx:define>

                <Label text="Transaktion ausführen" styleClass="card-title"/>

                <HBox spacing="12">
                    <RadioButton fx:id="rbDeposit"   text="Einzahlen"   toggleGroup="$txTypeGroup" onAction="#onTypeChanged"/>
                    <RadioButton fx:id="rbTransfer"  text="Überweisen"  toggleGroup="$txTypeGroup" onAction="#onTypeChanged" selected="true"/>
                    <RadioButton fx:id="rbWithdraw"  text="Auszahlen"   toggleGroup="$txTypeGroup" onAction="#onTypeChanged"/>
                </HBox>

                <GridPane hgap="8" vgap="6">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="60"/>
                        <ColumnConstraints percentWidth="40"/>
                    </columnConstraints>

                    <TextField fx:id="tfEmpfaenger" promptText="Empfänger" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfBetrag"     promptText="Betrag (z. B. 12,34)" GridPane.columnIndex="1"/>
                </GridPane>

                <TextField fx:id="tfBetreff" promptText="Verwendungszweck"/>

                <HBox spacing="8">
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Senden" onAction="#sendTransfers"/>
                </HBox>
            </VBox>
        </StackPane>

        <StackPane styleClass="card" VBox.vgrow="ALWAYS">
            <VBox spacing="8">
                <Label text="Letzte Transaktionen" styleClass="card-title"/>
                <ListView fx:id="lvTransactions" VBox.vgrow="ALWAYS"/>
            </VBox>
        </StackPane>
    </VBox>

    <!-- ===== Spalte 3: rechte Sidebar ===== -->
    <VBox GridPane.columnIndex="2" spacing="12">

        <StackPane styleClass="card">
            <VBox spacing="6" alignment="CENTER">
                <Label text="Bezahlplattform" styleClass="app-logo"/>
                <Label text="Branding-Bereich"/>
            </VBox>
        </StackPane>

        <StackPane styleClass="card" VBox.vgrow="ALWAYS">
            <VBox spacing="8">
                <Label text="Chats" styleClass="card-title"/>
                <ListView fx:id="lvChats" VBox.vgrow="ALWAYS"/>
            </VBox>
        </StackPane>
    </VBox>
</GridPane>
