<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fpj.javafxcontroller.WallCommentViewController"
            prefWidth="1280.0" prefHeight="720.0"
            minWidth="1280.0" minHeight="720.0"
            styleClass="root"
            stylesheets="@/styles/wallCommentView.css">

    <top>
        <VBox spacing="10"
              BorderPane.alignment="CENTER"
              styleClass="wall-header">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <fx:define>
                <ToggleGroup fx:id="commentFilterToggleGroup"/>
            </fx:define>

            <HBox alignment="CENTER"
                  spacing="10"
                  styleClass="card">

                <RadioButton fx:id="rbWrittenBy"
                             text="Verfasst von"
                             toggleGroup="$commentFilterToggleGroup"
                             selected="true"
                             onAction="#selectionTypeChanged"
                             styleClass="wall-filter-toggle"/>

                <RadioButton fx:id="rbWrittenFor"
                             text="Verfasst fÃ¼r"
                             toggleGroup="$commentFilterToggleGroup"
                             onAction="#selectionTypeChanged"
                             styleClass="wall-filter-toggle"/>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="searchField"
                           promptText="Sucheâ€¦"
                           maxWidth="300"
                           styleClass="wall-search-field"/>

                <Region HBox.hgrow="ALWAYS"/>
                <Button
                        text="ðŸ‘¤"
                        onAction="#onToCurrentUserWallClicked"
                        styleClass="wall-secondary-button">
                    <tooltip>
                        <Tooltip text="Pinnwand exportieren als CSV"/>
                    </tooltip>
                </Button>
                <Button fx:id="exportButton"
                        text="ðŸ“‚"
                        onAction="#onExport"
                        styleClass="wall-secondary-button">
                    <tooltip>
                        <Tooltip text="Pinnwand exportieren als CSV"/>
                    </tooltip>
                </Button>

                <Button fx:id="reloadButton"
                        text="â†»"
                        onAction="#onReloadWall"
                        styleClass="wall-secondary-button">
                    <tooltip>
                        <Tooltip text="Pinnwand aktualisieren"/>
                    </tooltip>
                </Button>
            </HBox>

            <GridPane hgap="20"
                      styleClass="card">
                <columnConstraints>
                    <ColumnConstraints percentWidth="100"/>
                    <ColumnConstraints percentWidth="0"/>
                </columnConstraints>
                <VBox spacing="5"
                      GridPane.columnIndex="0"
                      alignment="CENTER"
                      styleClass="wall-new-comment-box">
                    <Label fx:id="headlineLabel"
                           text="Pinnwand von Username"
                           styleClass="label-head"/>
                </VBox>
            </GridPane>
        </VBox>
    </top>

    <center>
        <StackPane>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <VBox alignment="TOP_CENTER"
                  spacing="10"
                  styleClass="card">
                <padding>
                    <Insets top="20" right="20" bottom="10" left="20"/>
                </padding>
                <ScrollPane fitToWidth="true"
                            pannable="true"
                            styleClass="wall-scroll">
                    <GridPane
                            fx:id="commentGrid"
                            hgap="20"
                            vgap="20"
                            styleClass="wall-grid">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <columnConstraints>
                            <ColumnConstraints percentWidth="33.33"/>
                            <ColumnConstraints percentWidth="33.33"/>
                            <ColumnConstraints percentWidth="33.33"/>
                        </columnConstraints>
                    </GridPane>
                </ScrollPane>
            </VBox>
            <TitledPane StackPane.alignment="BOTTOM_RIGHT"
                        text="Neuen Kommentar schreiben"
                        styleClass="wall-new-comment-toggle"
                        collapsible="true"
                        expanded="false"
                        prefWidth="560"
                        maxWidth="560">
                <StackPane.margin>
                    <Insets bottom="20" right="40"/>
                </StackPane.margin>

                <content>
                    <VBox spacing="5"
                          styleClass="card"
                          prefWidth="420"
                          prefHeight="200">
                        <TextArea fx:id="newCommentTextArea"
                                  promptText="Neuen Kommentar schreibenâ€¦"
                                  wrapText="true"
                                  prefRowCount="3"
                                  prefWidth="420"
                                  prefHeight="120"
                                  styleClass="wall-new-comment-area"/>

                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="sendButton"
                                        text="Senden"
                                        onAction="#onSendClicked"
                                        prefWidth="120"
                                        prefHeight="40"
                                        styleClass="wall-primary-button"/>
                            </children>
                        </HBox>
                    </VBox>
                </content>
            </TitledPane>


        </StackPane>

    </center>
</BorderPane>
