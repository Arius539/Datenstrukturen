<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fpj.javafxController.TransactionController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10">
        <HBox alignment="CENTER" spacing="5">
            <Label text="Empfänger:"/>
            <TextField fx:id="recipientInput"/>
        </HBox>
        <HBox alignment="CENTER" spacing="5">
            <Label text="Betrag:"/>
            <TextField fx:id="amountInput"/>
            <Label text="€"/>
        </HBox>
        <Button text="Zahlung bestätigen" onAction="#submit"/>
    </VBox>

</AnchorPane>
