<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fpj.javafxController.mainView.ChatPreviewController"
      spacing="12">

    <StackPane styleClass="card">
        <VBox spacing="6" alignment="CENTER">
            <Label text="Bezahlplattform" styleClass="app-logo"/>
            <Label text="Branding-Bereich"/>
        </VBox>
    </StackPane>

    <StackPane styleClass="card" VBox.vgrow="ALWAYS">
        <VBox spacing="8">
            <Label text="Chats" styleClass="card-title"/>
            <TextField fx:id="chatsUsernameSearch" promptText="Username"/>
            <ListView fx:id="lvChats" VBox.vgrow="ALWAYS"/>
        </VBox>
    </StackPane>
</VBox>
